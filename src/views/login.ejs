<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/login.css">
    <title>Login</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    
    <%- include('partials/header.ejs') %>

    <main class="formulario">
    <h1 class="main-title">Iniciar sesión con:</h1>
    <%- include('partials/login-register-modes.ejs') %>
    <section class="main-container">
        <form action="/login/user" method="POST">
            <div class="container">
                <input type="text" placeholder="E-mail o nombre de usuario" class="username-field">
            </div>
            <div class="container">
                <input type="password" placeholder="Contraseña" class="password-field">
            </div>
            <div class="remember-button">
                <input type="checkbox" >Recordar sesión
            </div>
            <div class="submit-button">
                <input type="submit" value="Iniciar Sesion">
            </div>
            <div class="forgot-password">
                <a href="#">¿Olvidaste tu contraseña?</a>
            </div>
        </form>
    </section>
</main>

    <%- include('partials/footer.ejs') %>
</body>
</html>
