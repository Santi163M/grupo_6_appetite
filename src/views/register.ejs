<head>
    <title> Register </title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="Content-Type" content="text/html;charset=UTF-8">
            <script src="https://kit.fontawesome.com/c85042c871.js" crossorigin="anonymous"></script>
            <link rel="stylesheet" href="/css/register.css">
            </head>
            <body>
                <%- include('partials/header.ejs') %>
                <h1 class="main-title"> Registrate con:</h1>
                <%- include('partials/login-register-modes.ejs') %>
                <section class="form-section">
                    <form action="" method="post" class="registro">
                        <div>
                            <label for="nombre"> Nombre</label>
                            <div>
                                <input type="text" name="Nombre" id="nombre">
                            </div>
                        </div>
                        <div>
                            <label for="apellido">Apellido</label>
                            <div>
                                <input type="text" name="apellido" id="apellido">
                            </div>
                        </div>
                        <div>
                            <label>Correo Electrónico</label>
                            <div>
                                <input type="email" name="email" id="email">
                            </div>
                        </div>
                        <div>
                            <label for="contraseña">Contraseña</label>
                            <div>
                                <input type="password" name="contraseña" id="contraseña">
                            </div>
                        </div>
                        <div>
                            <label for="rcontraseña">Repetir Contraseña</label>
                            <div>
                                <input type="password" name="rcontraseña" id="rcontraseña">
                            </div>
                        </div>
                        <div class="boton">
                            <input type="submit" value="Crear Cuenta">
                        </div>
                        <div class="login-link">
                            <a href="/login"><h3>¿Ya tenés cuenta? Inicía Sesión aquí</h3></a>
                        </div>
                    </form>

                </section>
                <%- include('partials/footer.ejs') %>
            </body>
