<head>
    <title> Register </title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Content-Type" content="text/html;charset=UTF-8">
    <script src="https://kit.fontawesome.com/c85042c871.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/register.css">
</head>
<body>

    <%- include('partial/header.ejs') %>
<section class="formulario">
    <h1> Registrate con:</h1>
    <section class="externos">
        <div>
            <a href="#"><img src="/img/google.svg" alt="Google"></a>
        </div>
        <div>
            <a href="#"><img src="/img/Facebook.svg" alt="Facebook"></a>
        </div>
    </section>
    <form action="" method="post" class="registro">
        <section>
            <div>
                <label for="nombre"> Nombre</label>
                <div>
                    <input type="text" name="Nombre" id="nombre">
                </div>
        </div>
        <div>
                <label for="apellido">Apellido</label>
                <div>
                    <input type="text" name="apellido" id="apellido">
                </div>
            </div>
        <div>
                <label for="contraseña">Contraseña</label>
                <div>
                    <input type="password" name="contraseña" id="contraseña">
                </div>
            </div>
        <div>
                <label for="rcontraseña">Repetir Contraseña</label>
                <div>
                    <input type="password" name="rcontraseña" id="rcontraseña">
                </div>
            </div>
            <div class="boton">
                <button  type="submit">Enviar</button>
            </div>
    </section>
</form>
</section>
<%- include('partial/footer.ejs') %>

</body>
